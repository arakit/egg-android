<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="EggBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="EggTheme" parent="EggBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="EggFullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />


    <style name="B">

    </style>

    <style name="B.Button">
        <item name="android:textColor">@color/text_light_1</item>
        <item name="android:background">@drawable/bbuton_default</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Normal -->
    <style name="B.Button.Primary" parent="B.Button">
        <item name="android:textColor">@color/text_dark_1</item>
        <item name="android:background">@drawable/bbuton_primary</item>
    </style>


    <!-- Rounded -->
    <style name="B.Button.Rounded" parent="B.Button">
        <item name="android:background">@drawable/bbuton_default_rounded</item>
    </style>

    <style name="B.Button.Rounded.Primary" parent="B.Button.Rounded">
        <item name="android:textColor">@color/text_dark_1</item>
        <item name="android:background">@drawable/bbuton_primary_rounded</item>
    </style>

    <style name="B.Button.Rounded.Info" parent="B.Button.Rounded">
        <item name="android:textColor">@color/text_dark_1</item>
        <item name="android:background">@drawable/bbuton_info_rounded</item>
    </style>

    <style name="B.Button.Rounded.Inverse" parent="B.Button.Rounded">
        <item name="android:textColor">@color/text_dark_1</item>
        <item name="android:background">@drawable/bbuton_inverse_rounded</item>
    </style>

    <!-- Inverse -->
    <style name="B.Button.Inverse" parent="B.Button">
        <item name="android:textColor">@color/text_light_1</item>
        <item name="android:background">@drawable/bbuton_inverse</item>
    </style>

</resources>
